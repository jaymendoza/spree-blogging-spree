    <div class="fields" style="clear: left">
        <% unless f.object.new_record? %>
            <div id="blog_image_<%= f.object.id %>" style="float: left; margin: 0 1em 1em 0">
                <%= image_tag f.object.attachment.url(:mini) %>
            </div>
			<script type="text/javascript" charset="utf-8">
				$('#blog_image_<%= f.object.id %> img').click(function(){
					//console.log(this);
					$('#blog_entry_body').insertAtCaret("!"+this.src+"!");
				});
			</script>
        <% end %>
		<%= f.file_field :attachment %>
        <%= link_to_remove_fields t("remove"), f %>
    </div>
